<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="fiels">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="fiels">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>